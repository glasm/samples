spawnpoint: begin
   Name=SpawnComputerHarmless
   Team=1
   Position=6000,-9500,-1500
   SpawnEntity0= begin
      Type=airplane
      Amount=2
      MaxSimultaneous=1
      InitialSpawnDelay=0
      SpawnDelay=3
